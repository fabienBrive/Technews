{% trans_default_domain 'sidebar' %}

<!--colright-->
<div class="col-md-4 col-sm-12">

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h3 class="text-center">
            {{ 'sidebar.hello'|trans}}Bonjour {{ app.user.prenom }}
        </h3>

        <h4 class="text-center">
            {% if is_granted('ROLE_ADMIN') %}
                {% trans from 'role' %}role.administrateur{% endtrans %}
            {% elseif is_granted('ROLE_EDITEUR') %}
                {% trans from 'role' %}role.editeur{% endtrans %}
             {% elseif is_granted('ROLE_AUTEUR') %}
                 {% trans from 'role' %}role.auteur{% endtrans %}
             {% else %}
                 {% trans from 'role' %}role.membre{% endtrans %}
            {% endif %}
        </h4>

        <ul class="list-group">
            {% if article
                and ( (article is defined and article.membre.id == app.user.id and is_granted('ROLE_AUTEUR') )
                or is_granted('ROLE_EDITEUR') )
            %}
                <li class="list-group-item">
                    <a href="{{ path('article_edit',{
                        id: article.id
                    }) }}">{{ 'sidebar.article.edit'|trans}}</a>
                </li>
            {% endif %}
            <li class="list-group-item">
                <a href="{{ path('security_deconnexion') }}">{% trans from 'nav' %}nav.deconnexion{% endtrans %}</a>
            </li>
            {% if is_granted('ROLE_AUTEUR') %}
                <li class="list-group-item">
                    <a href="{{ path('article_new') }}">{{ 'creer un article'|trans}}</a>
                </li>
            {% endif %}


        </ul>
    {% endif %}

    <!--tab popular-->
    <ul role="tablist" class="tab-popular">
        <li class="active">
            <a href="#tab1" role="tab" data-toggle="tab">
                {{ 'sidebar.'|trans}}
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab1">
            <ul class="list-news-popular">
                {% for article in articles %}
                <li>
                    <a href="{{ path('index_article', {
                        slug: article.slug,
                        id: article.id,
                        categorie: article.categorie.slug
                    }) }}">
                        <img alt="{{ article.titre }}" src="{{ asset('images/product/' ~ article.featuredImage) }}">
                    </a>
                    <h3><a href="{{ path('index_article', {
                            slug: article.slug,
                            id: article.id,
                            categorie: article.categorie.slug
                        }) }}">{{ article.titre }}</a></h3>
                    <div class="meta-post">
                        <a href="#">
                            {{ article.membre.prenom ~ ' ' ~ article.membre.nom }}
                        </a>
                        <em></em>
                        <span>
							{{ article.dateCreation | date('d/m/Y') }}
						</span>
                    </div>
                </li>
                {% endfor %}
            </ul>

        </div>
    </div>

    <!-- subcribe box-->
    <div class="subcribe-box">
        <h3>{{ 'sidebar.newsletter.title' | trans }}</h3>
        <p>{{ 'sidebar.newsletter.description' | trans }}</p>
        <input type="text" placeholder="{{ 'sidebar.newsletter.placeholder' | trans }}" />
        <button class="my-btn">{{ 'sidebar.newsletter.bouton' | trans }}</button>
    </div>
    <!-- connect us-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				{{ 'sidebar.Socialconnect'|trans}}
			</span>
        </div>
        <ul class="list-social-icon">
            <li>
                <a href="#" class="facebook">
                    <i class="fa fa-facebook"></i>
                </a>
            </li>
            <li>
                <a href="#" class="twitter">
                    <i class="fa fa-twitter"></i>
                </a>
            </li>
            <li>
                <a href="#" class="google">
                    <i class="fa fa-google"></i>
                </a>
            </li>
            <li>
                <a href="#" class="youtube">
                    <i class="fa fa-youtube-play"></i>
                </a>
            </li>
            <li>
                <a href="#" class="pinterest">
                    <i class="fa fa-pinterest-p"></i>
                </a>
            </li>
            <li>
                <a href="#" class="rss">
                    <i class="fa fa-rss"></i>
                </a>
            </li>
        </ul>
    </div>

    <!-- special post-->
    <div class="connect-us">
        <div class="widget-title">
			<span>
				{{ 'special.title'|trans}}
			</span>
        </div>
        <div class="list-special">
            {% for article in specials %}
            <article class="news-two-large">
                <a href="{{ path('index_article', {
                    slug: article.slug,
                    id: article.id,
                    categorie: article.categorie.slug
                }) }}">
                    <img alt="{{ article.titre }}" src="{{ asset('images/product/' ~ article.featuredImage) }}">
                </a>
                <h3><a href="{{ path('index_article', {
                        slug: article.slug,
                        id: article.id,
                        categorie: article.categorie.slug
                    }) }}">{{ article.titre }}</a></h3>
                <div class="meta-post">
                    <a href="#">
                        {{ article.membre.prenom ~ ' ' ~ article.membre.nom }}
                    </a>
                    <em></em>
                    <span>
						{{ article.dateCreation | date('d/m/Y') }}
					</span>
                </div>
            </article>
            {% endfor %}
        </div>
    </div>
</div>