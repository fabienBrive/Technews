{% extends "layout.html.twig" %}

{% set active = "connexion" %}

{% block page_title %}
    {% trans from 'nav'%}nav.connexion{% endtrans %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-6 col-xs-push-3">
            <h2 class="text-center">{% trans from 'nav' %}nav.connexion{% endtrans %}</h2>
            {% if error %}
                <div class="alert alert-dansger">
                    {{ error.messageKey | trans(error.messageData, 'security') }}
                </div>
            {% endif %}


            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form(form) }}

        </div>
    </div>
{% endblock %}


